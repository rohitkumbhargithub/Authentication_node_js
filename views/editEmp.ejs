<div class="container w-50 mt-5">
  <h1 class="mt-2 text-center">Edit Employee</h1> 
  <% if (employee) { %>
  <form action="/edit/<%= employee._id %>" method="POST" enctype="multipart/form-data">
    <!-- Hidden field to simulate PUT request -->
    <input type="hidden" name="_method" value="PUT">
    
    <div class="form-group">
      <label for="exampleInputName1">Employee Name</label>
      <input 
        type="text" 
        name="name"
        class="form-control" 
        id="exampleInputName1" 
        placeholder="Enter Employee Name"
        value="<%= employee.name %>">
    </div>
    <div class="form-group">
      <label for="exampleInputDesignation1">Designation</label>
      <input 
        type="text" 
        name="designation"
        class="form-control" 
        id="exampleInputDesignation1" 
        placeholder="Designation"
        value="<%= employee.designation %>">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <input 
        type="email" 
        name="email"
        class="form-control" 
        id="exampleInputEmail1" 
        placeholder="Email"
        value="<%= employee.email %>">
    </div>

    <div class="form-group">
      <label for="exampleInputFile1">Edit Profile</label>
    
      <% if (employee.file) { %>
       
        <div>
          <img src="/uploads/<%= employee.file %>" alt="Employee Profile" style="max-width: 100px; max-height: 100px;">
        </div>
      <% } %>
    
      <input 
        type="file" 
        name="file"
        class="form-control" 
        id="exampleInputFile1" />
    </div>
    <div class="mt-3">
      <button type="submit" class="btn btn-primary">Save the Changes</button>
    </div>
  </form>
  <% } %>
</div>
