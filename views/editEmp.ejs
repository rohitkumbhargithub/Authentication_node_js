<div class="container w-50 mt-5">
  <a href="/">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z"/>
    </svg>
    Back
  </a>
  <h1 class="mt-2 text-center">Edit Employee</h1> 
  <% if (employee) { %>
  <form action="/edit/<%= employee._id %>" method="POST" enctype="multipart/form-data">
    <!-- Hidden field to simulate PUT request -->
    <input type="hidden" name="_method" value="PUT">
    
    <div class="form-group">
      <label for="exampleInputName1">Employee Name</label>
      <input 
        type="text" 
        name="name"
        class="form-control" 
        id="exampleInputName1" 
        placeholder="Enter Employee Name"
        value="<%= employee.name %>">
    </div>
    <div class="form-group">
      <label for="exampleInputDesignation1">Designation</label>
      <input 
        type="text" 
        name="designation"
        class="form-control" 
        id="exampleInputDesignation1" 
        placeholder="Designation"
        value="<%= employee.designation %>">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <input 
        type="email" 
        name="email"
        class="form-control" 
        id="exampleInputEmail1" 
        placeholder="Email"
        value="<%= employee.email %>">
    </div>

    <div class="form-group">
      <label for="exampleInputFile1">Edit Profile</label>
    
      <% if (employee.file) { %>
       
        <div>
          <img src="/uploads/<%= employee.file %>" alt="Employee Profile" style="max-width: 100px; max-height: 100px;">
        </div>
      <% } %>
    
      <input 
        type="file" 
        name="file"
        class="form-control" 
        id="exampleInputFile1" />
    </div>
    <div class="mt-3">
      <button type="submit" class="btn btn-primary">Save the Changes</button>
    </div>
  </form>
  <% } %>
</div>
