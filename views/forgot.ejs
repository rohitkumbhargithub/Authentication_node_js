<div class="col-md-6 m-auto">
    <div class="card card-body text-center">
        <h1 class="mb-3">
            <img src="/assets/secure-icon.png" alt="icon" width="20%" />
        </h1>
        <h2>
            Forgot Password
        </h2>
        <%- include ("./messages") %>
        <form action="/auth/forgot" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control mt-2" placeholder="Enter Email" />
            </div>
            <button type="submit" class="btn btn-info mt-3">Send me a password reset link</button>
        </form>
        <p class="mt-4">
            Remember your password? <a href="/auth/login">Login</a>
        </p>
    </div>
</div>
</div>